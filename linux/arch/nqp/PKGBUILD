pkgname=nqp
pkgver=2015.05
pkgrel=1
pkgdesc="Not Quite Perl"
arch=('i686' 'x86_64')
url='https://github.com/perl6/nqp#readme'
license=(PerlArtistic)
depends=("moarvm=$pkgver")
makedepends=('perl>=5.8')
source=($pkgname-$pkgver.tar.gz::https://github.com/perl6/$pkgname/archive/$pkgver.tar.gz)
sha256sums=('c3120c80cbfb8cb957d7fe9873fc4c049735231076ab0fcbac5e15c683c0f1cf')

build() {
    cd "$srcdir/$pkgname-$pkgver"

    perl Configure.pl --backends=moar --prefix=/usr
    make
}
package() {
    cd "$srcdir/$pkgname-$pkgver"
    make DESTDIR="$pkgdir/" install
}

